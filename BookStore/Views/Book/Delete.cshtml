@model BookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="warning">Are you sure you want to delete this?</h3>
<div>

    <hr />
    <div class="book details">
        <h2>
            @Html.DisplayFor(model => model.Title)
        </h2>
        <p>
            By: @Html.DisplayFor(model => model.Author)
        </p>
        <p>
            @Html.DisplayNameFor(model => model.Pages): @Html.DisplayFor(model => model.Pages)
        </p>
        <p>
            @Html.DisplayNameFor(model => model.Year): @Html.DisplayFor(model => model.Year)
        </p>

        <p class="description-heading">
            @Html.DisplayNameFor(model => model.Description)
        </p>
        <p class="description-text">
            @Html.DisplayFor(model => model.Description)
        </p>


        <div>
            @for (int i = 1; i <= 5; i++)
            {
                if (Model.Rating.HasValue && i <= Model.Rating.Value)
                {
                    <span style="color: gold;">&#9733;</span> <!-- Gold star -->
                }
                else
                {
                    <span style="color: lightgray;">&#9734;</span> <!-- Empty star -->
                }
            }
        </div>


        <div>
            @Html.DisplayFor(model => model.Status.ReadingStatus)
        </div>
    </div>


    <form asp-action="Delete" class="details-actions">
        <a class="btn-back" asp-action="Index">Back to List</a>

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn" /> 
        
    </form>
</div>
